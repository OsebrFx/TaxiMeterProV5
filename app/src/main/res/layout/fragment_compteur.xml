<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header avec effet métallique -->
        <FrameLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_header" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:alpha="0.15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/btn_menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="@string/menu"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:letterSpacing="0.15"
                    android:shadowColor="#40000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="3" />

                <ImageView
                    android:id="@+id/btn_info"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="@string/info"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    app:tint="@color/black" />

            </LinearLayout>

        </FrameLayout>

        <!-- Container principal -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Label MONTANT TOTAL -->
            <TextView
                android:id="@+id/tv_label_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/montant_total"
                android:textColor="#FFD700"
                android:textSize="14sp"
                android:letterSpacing="0.3"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:shadowColor="#FFD700"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Display principal 7-segment ultra réaliste -->
            <FrameLayout
                android:id="@+id/card_fare"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_label_total"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Utilisation du nouveau background 7-segment -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_display_7segment"
                    android:elevation="24dp" />

                <!-- Grille de pixels éteints (effet LCD) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="14dp"
                    android:background="#05FF0000"
                    android:alpha="0.3" />

                <!-- Contenu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="24dp">

                    <!-- Display 7-segment -->
                    <include
                        android:id="@+id/seven_segment_fare"
                        layout="@layout/seven_segment_display_large"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!-- Unité DH -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dh"
                        android:textColor="#FF0000"
                        android:textSize="40sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:shadowColor="#FF0000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="16" />

                </LinearLayout>

            </FrameLayout>

            <!-- Container Temps et Distance -->
            <LinearLayout
                android:id="@+id/container_time_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/card_fare"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Display TEMPS -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/temps"
                        android:textColor="#FFD700"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.2"
                        android:gravity="center"
                        android:shadowColor="#FFD700"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="8"
                        android:layout_marginBottom="10dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_display_7segment"
                            android:elevation="16dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="14dp"
                            android:background="#05FF0000"
                            android:alpha="0.3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00"
                                android:textColor="#FF0000"
                                android:textSize="48sp"
                                android:fontFamily="monospace"
                                android:textStyle="bold"
                                android:shadowColor="#FF0000"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="14"
                                android:letterSpacing="0.15"
                                tools:text="00:21" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mm_ss"
                                android:textColor="#FFD700"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:shadowColor="#FFD700"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

                <!-- Display DISTANCE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/distance"
                        android:textColor="#FFD700"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.2"
                        android:gravity="center"
                        android:shadowColor="#FFD700"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="8"
                        android:layout_marginBottom="10dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_display_7segment"
                            android:elevation="16dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="14dp"
                            android:background="#05FF0000"
                            android:alpha="0.3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/tv_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textColor="#FF0000"
                                android:textSize="48sp"
                                android:fontFamily="monospace"
                                android:textStyle="bold"
                                android:shadowColor="#FF0000"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="14"
                                android:letterSpacing="0.15"
                                tools:text="12.5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/km"
                                android:textColor="#FFD700"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:shadowColor="#FFD700"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="6" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Panel LED ultra réalistes -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:cardBackgroundColor="#1a1a1a"
                app:cardCornerRadius="16dp"
                app:cardElevation="16dp"
                app:layout_constraintTop_toBottomOf="@id/container_time_distance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:gravity="center"
                    android:background="@drawable/bg_display_realistic">

                    <!-- LED ACTIF -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp">

                            <View
                                android:id="@+id/indicator_actif"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/indicator_inactive" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/actif"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp" />

                    </LinearLayout>

                    <!-- LED GPS -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp">

                            <View
                                android:id="@+id/indicator_gps"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/led_indicator_green" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gps"
                            android:textColor="#22FF22"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:shadowColor="#22FF22"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="6" />

                    </LinearLayout>

                    <!-- LED SYSTÈME -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp">

                            <View
                                android:id="@+id/indicator_system"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/led_indicator_green" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/systeme"
                            android:textColor="#22FF22"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:shadowColor="#22FF22"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="6" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Boutons -->
            <LinearLayout
                android:id="@+id/container_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/card_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_start"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="@string/demarrer"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_button_selector"
                        android:elevation="16dp"
                        android:stateListAnimator="@null"
                        app:icon="@drawable/ic_play"
                        app:iconTint="@color/black"
                        app:iconSize="28dp"
                        app:iconGravity="textStart" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reset"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="@string/reinitialiser"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_button_selector"
                        android:elevation="16dp"
                        android:stateListAnimator="@null"
                        app:icon="@drawable/ic_reset"
                        app:iconTint="@color/black"
                        app:iconSize="28dp"
                        app:iconGravity="textStart" />

                </FrameLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>