<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Header -->
        <FrameLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_header" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:alpha="0.15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/btn_menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="@string/menu"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:letterSpacing="0.15" />

                <ImageView
                    android:id="@+id/btn_info"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="@string/info"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    app:tint="@color/black" />

            </LinearLayout>

        </FrameLayout>

        <!-- Container principal -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Label MONTANT TOTAL -->
            <TextView
                android:id="@+id/tv_label_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/montant_total"
                android:textColor="#FFD700"
                android:textSize="15sp"
                android:letterSpacing="0.3"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:shadowColor="#FFD700"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="12"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- DISPLAY PRINCIPAL 8K ULTRA HD AVEC 7-SEGMENTS RÉALISTES -->
            <FrameLayout
                android:id="@+id/card_fare"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_label_total"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Background 8K ultra HD -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_display_8k_ultra_hd"
                    android:elevation="4dp" />

                <!-- Vue custom 7-segments réaliste -->
                <com.taximeter.pro.ui.views.RealisticSevenSegmentView
                    android:id="@+id/realistic_seven_segment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp"
                    android:elevation="24dp" />

            </FrameLayout>

            <!-- Container Temps et Distance -->
            <LinearLayout
                android:id="@+id/container_time_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/card_fare"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- TEMPS -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/temps"
                        android:textColor="#FFD700"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.25"
                        android:gravity="center"
                        android:shadowColor="#FFD700"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        android:layout_marginBottom="8dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_display_8k_ultra_hd"
                            android:elevation="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="20dp"
                            android:elevation="20dp">

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00"
                                android:textColor="#FF0000"
                                android:textSize="48sp"
                                android:fontFamily="monospace"
                                android:textStyle="bold"
                                android:shadowColor="#FF0000"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="22"
                                android:letterSpacing="0.05"
                                android:includeFontPadding="false"
                                android:background="@android:color/transparent"
                                tools:text="05:42" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mm_ss"
                                android:textColor="#FFD700"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:shadowColor="#FFD700"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="8"
                                android:background="@android:color/transparent" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

                <!-- DISTANCE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/distance"
                        android:textColor="#FFD700"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.25"
                        android:gravity="center"
                        android:shadowColor="#FFD700"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        android:layout_marginBottom="8dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_display_8k_ultra_hd"
                            android:elevation="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="20dp"
                            android:elevation="20dp">

                            <TextView
                                android:id="@+id/tv_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textColor="#FF0000"
                                android:textSize="48sp"
                                android:fontFamily="monospace"
                                android:textStyle="bold"
                                android:shadowColor="#FF0000"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="22"
                                android:letterSpacing="0.05"
                                android:includeFontPadding="false"
                                android:background="@android:color/transparent"
                                tools:text="12.5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/km"
                                android:textColor="#FFD700"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:shadowColor="#FFD700"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="8"
                                android:background="@android:color/transparent" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Panel LED 8K Ultra Réalistes -->
            <FrameLayout
                android:id="@+id/card_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/container_time_distance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_display_8k_ultra_hd"
                    android:elevation="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="28dp"
                    android:gravity="center"
                    android:elevation="18dp">

                    <!-- ACTIF -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="42dp"
                            android:layout_height="42dp">

                            <View
                                android:id="@+id/indicator_actif"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/led_ultra_realistic_inactive" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/actif"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:background="@android:color/transparent" />

                    </LinearLayout>

                    <!-- GPS -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="42dp"
                            android:layout_height="42dp">

                            <View
                                android:id="@+id/indicator_gps"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/led_ultra_realistic_green" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gps"
                            android:textColor="#33FF33"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:shadowColor="#33FF33"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="10"
                            android:background="@android:color/transparent" />

                    </LinearLayout>

                    <!-- SYSTÈME -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="42dp"
                            android:layout_height="42dp">

                            <View
                                android:id="@+id/indicator_system"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/led_ultra_realistic_green" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/systeme"
                            android:textColor="#33FF33"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:shadowColor="#33FF33"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="10"
                            android:background="@android:color/transparent" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <!-- Boutons Améliorés -->
            <LinearLayout
                android:id="@+id/container_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/card_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="14dp">

                    <!-- Ombre du bouton -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_button_start"
                        android:alpha="0.5" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_start"
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:text="@string/demarrer"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_button_selector"
                        android:elevation="18dp"
                        android:stateListAnimator="@null"
                        app:icon="@drawable/ic_play"
                        app:iconTint="@color/black"
                        app:iconSize="26dp"
                        app:iconGravity="textStart" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="14dp">

                    <!-- Ombre du bouton -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_button_start"
                        android:alpha="0.5" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reset"
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:text="@string/reinitialiser"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_button_selector"
                        android:elevation="18dp"
                        android:stateListAnimator="@null"
                        app:icon="@drawable/ic_reset"
                        app:iconTint="@color/black"
                        app:iconSize="26dp"
                        app:iconGravity="textStart" />

                </FrameLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>