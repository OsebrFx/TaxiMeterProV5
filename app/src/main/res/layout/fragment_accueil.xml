<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header avec effet métallique -->
        <FrameLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_header" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:alpha="0.15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="@string/menu"
                    android:padding="8dp"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:letterSpacing="0.15"
                    android:shadowColor="#40000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="3" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="@string/info"
                    android:padding="8dp"
                    app:tint="@color/black" />

            </LinearLayout>

        </FrameLayout>

        <!-- Container principal -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Icône Taxi avec effet 3D -->
            <FrameLayout
                android:id="@+id/card_icon"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Ombre portée -->
                <View
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_profile_circle"
                    android:alpha="0.3" />

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/taxi_yellow"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="20dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Reflet sur le cercle -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            android:alpha="0.2" />

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_taxi"
                            android:contentDescription="@string/app_name"
                            app:tint="@color/black" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <!-- Titre avec effet néon -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAXIMETER"
                android:textColor="#FFD700"
                android:textSize="48sp"
                android:textStyle="bold"
                android:letterSpacing="0.15"
                android:shadowColor="#FFD700"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/card_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRO"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="0.3"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Cards de tarifs avec design moderne -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_base_fare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="#1a1a1a"
                app:cardCornerRadius="18dp"
                app:cardElevation="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prise_en_charge"
                        android:textColor="#FFD700"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.25"
                        android:shadowColor="#FFD700"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/base_fare"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/container_rates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/card_base_fare"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="#1a1a1a"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tarif_km"
                            android:textColor="#FFD700"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.2"
                            android:gravity="center"
                            android:shadowColor="#FFD700"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price_per_km"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:layout_marginTop="10dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="#1a1a1a"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tarif_minute"
                            android:textColor="#FFD700"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.2"
                            android:gravity="center"
                            android:shadowColor="#FFD700"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price_per_minute"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:layout_marginTop="10dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Bouton START avec effet 3D -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/container_rates"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Ombre du bouton -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_button_start"
                    android:alpha="0.4" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_start_trip"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="@string/demarrer_course"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_selector"
                    android:elevation="16dp"
                    android:stateListAnimator="@null"
                    app:icon="@drawable/ic_play"
                    app:iconTint="@color/black"
                    app:iconSize="32dp"
                    app:iconGravity="textStart" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>