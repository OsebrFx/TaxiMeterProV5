<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Glow externe large -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:centerColor="#40FF0000"
                android:endColor="#00FF0000" />
            <size android:width="32dp" android:height="32dp" />
        </shape>
    </item>

    <!-- Glow moyen -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:centerColor="#80FF0000"
                android:endColor="#20FF0000" />
        </shape>
    </item>

    <!-- Corps du LED avec gradient -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:centerColor="#FF3333"
                android:endColor="#CC0000" />
        </shape>
    </item>

    <!-- Reflet brillant central -->
    <item android:top="10dp" android:bottom="18dp" android:left="10dp" android:right="18dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="40%"
                android:centerColor="#80FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

</layer-list>