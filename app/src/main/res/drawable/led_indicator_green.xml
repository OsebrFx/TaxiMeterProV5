<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Glow externe large -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:centerColor="#4022FF22"
                android:endColor="#0022FF22" />
            <size android:width="32dp" android:height="32dp" />
        </shape>
    </item>

    <!-- Glow moyen -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:centerColor="#8022FF22"
                android:endColor="#2022FF22" />
        </shape>
    </item>

    <!-- Corps du LED avec gradient -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:centerColor="#33FF33"
                android:endColor="#00CC00" />
        </shape>
    </item>

    <!-- Reflet brillant central -->
    <item android:top="10dp" android:bottom="18dp" android:left="10dp" android:right="18dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="40%"
                android:centerColor="#80FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

</layer-list>