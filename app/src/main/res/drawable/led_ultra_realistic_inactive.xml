<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Corps sombre de la LED éteinte -->
    <item>
        <shape android:shape="oval">
            <size android:width="28dp" android:height="28dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="14dp"
                android:centerColor="#FF333333"
                android:endColor="#FF1A1A1A"/>
        </shape>
    </item>

    <!-- Bordure pour effet 3D -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="12dp"
                android:centerColor="#FF222222"
                android:endColor="#FF000000"/>
        </shape>
    </item>

    <!-- Petit reflet pour réalisme -->
    <item
        android:top="4dp"
        android:bottom="18dp"
        android:left="4dp"
        android:right="18dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="3dp"
                android:centerColor="#33FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>

</layer-list>
