<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Cadre extérieur métallique sombre -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0d0d0d" />
            <corners android:radius="16dp" />
            <stroke android:width="4dp" android:color="#1a1a1a" />
        </shape>
    </item>

    <!-- Bordure métallique intermédiaire -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#1a1a1a" />
            <corners android:radius="14dp" />
            <stroke android:width="2dp" android:color="#2a2a2a" />
        </shape>
    </item>

    <!-- Cadre interne biseauté -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#0a0a0a" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Écran LCD noir profond avec gradient subtil -->
    <item android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#000000"
                android:centerColor="#050505"
                android:endColor="#000000"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Effet de reflet brillant sur le haut de l'écran -->
    <item
        android:top="12dp"
        android:bottom="60dp"
        android:left="12dp"
        android:right="12dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#15FFFFFF"
                android:centerColor="#08FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />
        </shape>
    </item>

    <!-- Ombre intérieure subtile en bas -->
    <item
        android:top="80dp"
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#00000000"
                android:endColor="#20000000"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp" />
        </shape>
    </item>

</layer-list>